
<section class="onhoverCart">
    <div class="container">
        <h3>My Cart<span>({{cart_Item.count}} item)</span></h3>
        <div class="onhoverCart__Items">
            {{#each productInCart}}
            <div class="onhoverCart-List flex-container">
                <div class="onhoverCart-List__img">
                    <img
                        src="{{imageURL}}"
                        alt="{{name}}">
                </div>
                <div class="onhoverCart-List__detail">
                    <h5>{{name}}</h5>
                    <div>
                        <button class="btn btn--minus" onclick="minusCount()">-</button>
                        <input type="text" value="1"
                            id="prod_quantity">
                        <button class="btn btn--plus" onclick="addCount()">+</button>
                        <span class="price">Rs.{{price}}</span>
                        <span class="prod-total_price">Rs.{{prod_totalCount}}</span>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
        <div class="onhoverCart__batch">
            <div>
                <img
                    src="/static/images/lowest-price.png"
                    alt="">
            </div>
            <div>
                <p>You won't find cheaper
                    anywhere</p>
            </div>
        </div>
        <div class="checkout">
            <p>Promo code can be applied on
                payment page</p>
            <button class="btn btn--full_width">Proceed
                to checkout <span>Rs. {{cart_item.totalPrice}}</span></button>
        </div>
    </div>
</section>