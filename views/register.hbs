<div class="user-form">
    <section>
        <div class="container">
            <div class="user-form__form">
                <div class="flex-container">
                    <div class="user-form__formText">
                        <h2 tabindex="0">register</h2>
                        <p tabindex="0">Get access to your Orders , Wishlists and
                            Recommendations </p>
                    </div>
                    <div class="user-form__formSet">
                        <form method="post" autocomplete="off">
                            <div class="fieldset">
                                <input type="text" class="form__input"
                                    id="First_name" required>
                                <label for="First_name">First Name</label>
                            </div>
                            <div class="fieldset">
                                <input type="text" class="form__input"
                                    id="Last_name" required>
                                <label for="Last_name">Last Name</label>
                            </div>
                            <div class="fieldset">
                                <input type="email" class="form__input"
                                    id="email" required>
                                <label for="email">Email</label>
                            </div>
                            <div class="fieldset">
                                <input type="password" class="form__input"
                                    id="pwd" required>
                                <label for="pwd">Password</label>
                            </div>
                            <div class="fieldset">
                                <input type="password" class="form__input"
                                    id="confirm_pwd" required>
                                <label for="pwd">Confirm Password</label>
                            </div>
                            <div class="fieldset">
                                <button type="submit" class="btn btn--full_width">Register</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>